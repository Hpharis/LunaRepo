---
const { title, items, baseUrl } = Astro.props;
---

<BaseLayout title={title} description={`${title} from TouringMag`}>
  <h1 class="text-3xl font-bold mb-6">{title}</h1>
  <div class="grid gap-6 md:grid-cols-2">
    {items.map((item) => (
      <a href={`${baseUrl}/${item.slug}`} class="block border rounded-lg p-4 hover:shadow-lg">
        {item.data.heroImage && <img src={item.data.heroImage} alt={item.data.title} class="mb-4 rounded-md" />}
        <h2 class="text-xl font-semibold">{item.data.title}</h2>
        <p class="text-gray-600">{item.data.summary}</p>
      </a>
    ))}
  </div>
</BaseLayout>

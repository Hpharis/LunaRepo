<header style="background:black; border-bottom:1px solid #262626; position:sticky; top:0; z-index:50;">
  <div style="max-width:1280px; margin:0 auto; display:flex; align-items:center; justify-content:space-between; padding:1rem 1.5rem;">
    <!-- Left: Logo -->
    <a href="/" style="display:flex; align-items:center;">
<img 
  src="/assets/touringmaglogo.png" 
  alt="TouringMag Logo" 
  style="height:100px; width:auto;" 
/>

    </a>

    <!-- Center: Nav -->
    <nav class="flex justify-center space-x-8 font-medium text-gray-300 text-sm md:text-lg uppercase tracking-wide">
      <a href="/" class="hover:text-orange-400 transition">Home</a>
      <a href="/blog" class="hover:text-orange-400 transition">Blog</a>
      <a href="/gear" class="hover:text-orange-400 transition">Gear</a>
      <a href="/upgrades" class="hover:text-orange-400 transition">Upgrades</a>
      <a href="/guides" class="hover:text-orange-400 transition">Guides</a>
      <a href="/about" class="hover:text-orange-400 transition">About</a>
      <a href="/contact" class="hover:text-orange-400 transition">Contact</a>
    </nav>
  </div>
</header>

    <!-- 📰 Main content -->
    <main class="flex-1 max-w-7xl mx-auto w-full px-6 py-10">
      <slot />
    </main>


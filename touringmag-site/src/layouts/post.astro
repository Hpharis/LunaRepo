---
const { title, summary, date } = Astro.props;
---
<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content={summary} />
  </head>
  <body>
    <main>
      <article>
		<div class="title">
		  <div class="date">
			<FormattedDate date={pubDate} />
			{updatedDate && (
			  <div class="last-updated-on">
				Last updated on <FormattedDate date={updatedDate} />
			  </div>
			)}
		  </div>
		  <h1>{title}</h1>
		  {frontmatter.author && (
			<p class="author text-sm text-gray-400 mb-4 italic">
			  {frontmatter.author} â€” {frontmatter.role}
			</p>
		  )}
		  <hr />
		</div>

        <slot />
      </article>
    </main>
  </body>
</html>

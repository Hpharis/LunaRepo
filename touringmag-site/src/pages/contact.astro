---
import BaseLayout from '../layouts/BaseLayout.astro';
const title = "Contact Us";
const description = "Get in touch with H.W. Pharis and the TouringMag team. Questions, feedback, or sponsorships—let’s connect.";
---
<BaseLayout {title} {description}>
  <section class="max-w-3xl mx-auto py-12 text-gray-200">
    <h1 class="text-4xl font-bold text-orange-500 mb-6">Contact Us</h1>
    <p>Have questions, suggestions, or feedback? We’d love to hear from you.</p>
    <form method="POST" action="mailto:contact@touringmag.com" enctype="text/plain" class="mt-6 space-y-4">
      <div>
        <label for="name">Name (optional):</label><br />
        <input type="text" id="name" name="name" class="w-full" />
      </div>
      <div>
        <label for="email">Your Email:</label><br />
        <input type="email" id="email" name="email" required class="w-full" />
      </div>
      <div>
        <label for="message">Message:</label><br />
        <textarea id="message" name="message" rows="5" required class="w-full"></textarea>
      </div>
      <button type="submit" class="px-4 py-2 bg-orange-500 text-white rounded">Send Message</button>
    </form>
    <p class="mt-4">Or reach us directly at: <a href="mailto:contact@touringmag.com" class="text-orange-400">contact@touringmag.com</a></p>
    <p class="mt-2 italic">Note: Newsletters are strictly <strong>opt-in only</strong>—we’ll only email you if you subscribe.</p>
  </section>
</BaseLayout>

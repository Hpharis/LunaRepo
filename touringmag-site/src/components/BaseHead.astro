---
import BaseHead from "../components/BaseHead.astro";
---

<html lang="en">
  <head>
    <BaseHead title={Astro.props.title} description={Astro.props.description} image={Astro.props.image} />
  </head>
  <body class="flex flex-col min-h-screen bg-neutral-950 text-gray-100 font-sans">
    <!-- Header -->
    <header class="bg-black border-b border-neutral-800 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto grid grid-cols-3 items-center px-6 py-4">
        <!-- Left: Logo -->
        <a href="/" class="flex items-center space-x-3">
          <img src="/public/assets/touringmaglogo.png" alt="TouringMag Logo" class="h-10 w-auto" />
        </a>

        <!-- Center: Nav -->
        <nav class="flex justify-center space-x-8 font-medium text-gray-300 text-lg uppercase tracking-wide">
          <a href="/" class="hover:text-orange-400 transition">Home</a>
          <a href="/blog" class="hover:text-orange-400 transition">Blog</a>
          <a href="/gear" class="hover:text-orange-400 transition">Gear</a>
          <a href="/upgrades" class="hover:text-orange-400 transition">Upgrades</a>
          <a href="/guides" class="hover:text-orange-400 transition">Guides</a>
		  <a href="/routes" class="hover:text-orange-400 transition">Routes</a>
		  <a href="/advisor" class="hover:text-orange-400 transition">Advisor</a>
		  <a href="/map" class="hover:text-orange-400 transition">Map</a>
          <a href="/about" class="hover:text-orange-400 transition">About</a>
          <a href="/contact" class="hover:text-orange-400 transition">Contact</a>
        </nav>

        <!-- Right: empty (reserved for search/user later) -->
        <div></div>
      </div>
    </header>

    <!-- Main content -->
    <main class="flex-1 max-w-7xl mx-auto w-full px-6 py-10">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-black border-t border-neutral-800 py-8 text-center text-gray-500 text-sm">
      <p>&copy; 2025 TouringMag. All rights reserved.</p>
      <p class="italic mt-2">Independently operated â€” not affiliated with Harley-Davidson.</p>
      <div class="mt-4 space-x-4">
        <a href="/about" class="hover:text-orange-400">About</a>
        <a href="/contact" class="hover:text-orange-400">Contact</a>
        <a href="/blog" class="hover:text-orange-400">Blog</a>
      </div>
    </footer>
  </body>
</html>

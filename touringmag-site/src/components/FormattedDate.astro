---
interface Props {
  date?: string | Date;
}

let { date } = Astro.props;

// Normalize
if (typeof date === "string") {
  date = new Date(date);
}
---

{date && (
  <time datetime={date.toISOString()}>
    {date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })}
  </time>
)}

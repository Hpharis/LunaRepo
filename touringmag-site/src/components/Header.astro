---

<!-- src/components/Header.astro -->
<header class="site-header">
  <div class="site-header__wrapper">
    <a href="/" class="logo">
      <img src="/assets/touringmaglogo.png" alt="TouringMag Logo" class="logo-img" />
    </a>  
      <nav class="nav">
      <a href="/">Home</a>
      <a href="/blog">Blog</a>
      <a href="/gear">Gear</a>
      <a href="/upgrades">Upgrades</a>
      <a href="/guides">Guides</a>
